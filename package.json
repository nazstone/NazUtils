{
  "name": "nazutils",
  "version": "0.1.0",
  "private": true,
  "author": "nazstone@gmail.com",
  "description": "Application for developer. Formatter, Decode/encode...",
  "license": "MIT",
  "build": {
    "appId": "org.nazstone.nazutil",
    "files": [
      "node_modules/**/*",
      "build/**/*",
      "public/**/*",
      "package.json"
    ],
    "productName": "NazUtils",
    "linux": {
      "target": [
        "zip"
      ],
      "category": "Development"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "autoprefixer": "^9.8.8",
    "concurrently": "^6.3.0",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "postcss": "^7.0.39",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
    "wait-on": "^6.0.0"
  },
  "dependencies": {
    "@craco/craco": "^6.4.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "highlight.js": "^11.3.1",
    "history": "^5.1.0",
    "html-entities": "^2.3.2",
    "jsonwebtoken": "^8.5.1",
    "lorem-ipsum": "^2.0.4",
    "prettier": "^2.4.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-codemirror2": "^7.2.1",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.0",
    "react-scripts": "4.0.3",
    "sql-formatter": "^4.0.2",
    "web-vitals": "^1.0.1",
    "xml-formatter": "^2.5.1"
  },
  "scripts": {
    "postinstall": "husky install",
    "lint": "eslint src public",
    "react-start": "craco start",
    "react-build": "craco build",
    "react-test": "craco test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
